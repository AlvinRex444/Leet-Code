class Solution {
    public int countGoodSubstrings(String s) {
        int ln = s.length();
        int count = 0;
        for (int i = 0; i < ln - 2; i++) {
            char ch = s.charAt(i);
            char chh = s.charAt(i + 1);
            char c = s.charAt(i + 2);

            if (ch != chh && chh != c && ch != c) {
                count++;
            }
        }

        return count;
    }
}
